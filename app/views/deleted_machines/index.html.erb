<div id="deleted-machines-index">

<div class="row-fluid">
  <div class="span12">
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="<%= deleted_machines_path %>">Deleted Machines</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span8">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>FQDN</th>
          <th>Deleted at</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%- @deleted_machines.each do |machine| -%>
          <tr>
            <td><%= machine.fqdn %></td>
            <td><%= machine.deleted_at.localtime %></td>
            <td>
              <%= link_to "Undelete", edit_deleted_machine_path(machine), class: "btn" %>
              <%= link_to "Destroy finally", deleted_machine_path(machine), class: "btn", style: "float:right", method: :delete %>
            </td>
          </tr>
        <%- end -%>
      </tbody>
    </table>
  </div>
</div>

</div>
