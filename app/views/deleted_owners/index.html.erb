<div id="deleted-owners-index">

<div class="row-fluid">
  <div class="span12">
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="<%= deleted_owners_path %>">Deleted Owners</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span8">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Deleted at</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%- @deleted_owners.each do |owner| -%>
          <tr>
            <td><%= owner.name %></td>
            <td><%= owner.deleted_at.localtime %></td>
            <td>
              <%= link_to "Undelete", edit_deleted_owner_path(owner), class: "btn" %>
              <%= link_to "Destroy finally", deleted_owner_path(owner), class: "btn", style: "float:right", method: :delete %>
            </td>
          </tr>
        <%- end -%>
      </tbody>
    </table>
  </div>
</div>

</div>
