<div id="owners-show">

<div class="row-fluid tabbable">
  <div class="span12">
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="<%= edit_location_path(@location) %>"><%= @location.name %></a>
          <ul class="nav pull-right">
          <li><%= link_to '<i class="fa fa-edit"></i> Edit'.html_safe, edit_location_path(@location) %></li>
          <li><%= link_to '<i class="fa fa-times"></i> Delete'.html_safe, location_path(@location), class: 'location-delete', method: 'delete' %></li>
          <li><%= link_to '<i class="fa fa-level-up"></i> Cancel'.html_safe, locations_path %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span6 tab-content">
    <div class="tab-pane active" id="data">
      <table class="table table-condensed">
        <tr>
          <th>Location:</th>
          <th>Description:</th>
        </tr>
        <tr>
          <%- location = k(:location, @location) -%>
          <td><%= location.location_link.html_safe %></td>
          <td><%= location.description %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

</div>
