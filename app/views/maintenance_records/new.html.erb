<div id="maintenance-records-form">

<div class="row-fluid">
  <div class="span12">
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="<%= new_machine_path %>">New Maintenance Record for <%= @machine.name %></a>
          <ul class="nav pull-right">
            <li><%= link_to '<i class="fa fa-level-up"></i> Cancel'.html_safe, machine_path(@machine) %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div>
  <div class="row-fluid">
    <div class="span12">
      <p>You are creating a maintenance record manually, so please leave a
      comment as a replacement for the logfile.</p>

      <%= simple_form_for(@record, html: {class: 'form-vertical' },
            defaults: {input_html: {class: 'span12'}}) do |f| %>
        <%= f.input :logfile, as: :text, label: 'Comment', input_html: {rows: 10},
              placeholder: "#{@username} screwed up and left no comment..." %>
        <%= f.input :machine_id, as: :hidden %>
        <%= f.button :submit %>
      <%- end -%>
    </div>
  </div>
</div>

</div>
